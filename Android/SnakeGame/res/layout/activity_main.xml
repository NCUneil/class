<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button 
        android:id="@+id/pause"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector"
        android:text="暂停"/>
    
    <Button 
        android:id="@+id/start"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_above="@id/pause"
        android:background="@drawable/selector"
        android:text="开始"
        />
    <Button 
        android:id="@+id/left"
        android:layout_toRightOf="@id/pause"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/dir_selector"
        android:text="←"
        />
    <Button 
        android:id="@+id/down"
        android:layout_toRightOf="@id/left"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/dir_selector"
        android:text="↓"
        />
    <Button 
        android:id="@+id/right"
        android:layout_toRightOf="@id/down"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/dir_selector"
        android:text="→"
        />
    <Button 
        android:id="@+id/up"
        android:layout_above="@id/down"
        android:layout_toRightOf="@id/left"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/dir_selector"
        android:text="↑"
        />
    <TextView
        android:id="@+id/score"
        android:layout_above="@id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="分数：" />
    <TextView 
        android:id="@+id/scoreNum"
        android:layout_toRightOf="@id/score"
        android:layout_above="@id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="0"        />
    <TextView 
        android:id="@+id/maxScore"
        android:layout_above="@id/start"
        android:layout_toRightOf="@id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="最高分："
        />
    <TextView 
        android:id="@+id/maxScoreNum"
        android:layout_toRightOf="@id/maxScore"
        android:layout_above="@id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="0"
        />
    <com.example.snakegame.SnakeView
        android:id="@+id/snakeView"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
</RelativeLayout>


